@model RequestsForRights.Models.ViewModels.RequestIndexViewModel

@{
    ViewBag.Title = "Список заявок";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заявки</h2>

@Html.Partial("ErrorAlert")
@Html.Partial("FilterControl", Model)
@Html.Partial("DataTable", Model)
@Html.Partial("DeleteModal", new
{
    Caption = "Подтвердите удаление",
    Description = "Вы действительно хотите удалить эту заявку?"
})

@section scripts {
    @Styles.Render("~/Content/bootstrap-datepicker")
    @Scripts.Render("~/bundles/bootstrap-datepicker")
    @Scripts.Render("~/bundles/rr-index.common")
    @Scripts.Render("~/bundles/rr-request.index")
}