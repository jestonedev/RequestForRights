@model RequestsForRights.Models.ViewModels.ResourceIndexViewModel

@{
    ViewBag.Title = "Справочник информационных ресурсов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Информационные ресурсы</h2>

@Html.Partial("ErrorAlert")
@Html.Partial("FilterControl", Model.FilterOptions)
@Html.Partial("DataTable", Model)
@Html.Partial("DeleteModal", new
{
    Caption = "Подтвердите удаление",
    Description = "Вы действительно хотите удалить этот ресурс?"
})

@section scripts {
    @Scripts.Render("~/bundles/rr-index.common")
}