                {
                    <i>Отсутствуют</i>
                }
                else
                {
                    @Model.ResourceInternetAddresses[i].DomainNames
                }
            </dd>
            <dt>@Html.DisplayNameFor(r => r.ResourceInternetAddresses[i].DhcpIpAddress)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.ResourceInternetAddresses[i].DhcpIpAddress))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.ResourceInternetAddresses[i].DhcpIpAddress
                }
            </dd>
        </dl>
        <dl class="col-sm-6">
