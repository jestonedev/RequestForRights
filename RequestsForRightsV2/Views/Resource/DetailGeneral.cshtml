@model RequestsForRights.Domain.Entities.Resource

<div class="panel panel-primary">
    <div class="panel-heading">Общие сведения</div>
    <div class="panel-body rr-detail-resource-panel-body">
        <dl class="col-sm-6">
            <dt>@Html.DisplayNameFor(r => r.Name)</dt>
            <dd>@Model.Name</dd>
            <dt>@Html.DisplayNameFor(r => r.IdResourceGroup)</dt>
            <dd>@Model.ResourceGroup.Name</dd>
        </dl>
        <dl class="col-sm-6">
            <dt>@Html.DisplayNameFor(r => r.InnControlSubject)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.InnControlSubject))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.InnControlSubject
                }
            </dd>

            <dt>@Html.DisplayNameFor(r => r.EmailAdministrator)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.EmailAdministrator))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.EmailAdministrator
                }
            </dd>
        </dl>
        <div class="clearfix"></div>
        <dl class="col-xs-12">
            <dt>@Html.DisplayNameFor(r => r.Description)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.Description))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.Description
                }
            </dd>
        </dl>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">Краткое описание характера информации, размещенной в информационной системе</div>
    <div class="panel-body rr-detail-resource-panel-body">
        <dl class="col-xs-12">
            <dt>@Html.DisplayNameFor(r => r.IdResourceInformationType)</dt>
            <dd>
                @if (Model.ResourceInformationType == null)
                {
                    <i>Отсутствуют</i>
                }
                else
                {
                    @Model.ResourceInformationType.Name
                }
            </dd>
            <dt>@Html.DisplayNameFor(r => r.PersonalInfoDescription)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.PersonalInfoDescription))
                {
                    <i>Отсутствуют</i>
                }
                else
                {
                    @Model.PersonalInfoDescription
                }
            </dd>
        </dl>
    </div>
</div>

<div class="col-xs-12 rr-resource-has-not-internet-access-checkbox">
    <div class="checkbox-inline">
        @Html.CheckBoxFor(r => Model.HasNotInternetAccess, new { disabled = "disabled" })
        @Html.LabelFor(r => Model.HasNotInternetAccess, new { @class = "control-label" })
    </div>
</div>

@if (!Model.HasNotInternetAccess)
{
    <div class="panel panel-primary">
        <div class="panel-heading">Сетевые адреса в сети "Интернет"</div>

        @if (Model.ResourceInternetAddresses != null && Model.ResourceInternetAddresses.Any(r => !r.Deleted))
        {
            <ul class="list-group">
                @for (var i = 0; i < Model.ResourceInternetAddresses.Count; i++)
{
    if (Model.ResourceInternetAddresses[i].Deleted)
    {
        continue;
    }
    <li class="list-group-item rr-detail-resource-list-group-item">
        <dl class="col-sm-6">
