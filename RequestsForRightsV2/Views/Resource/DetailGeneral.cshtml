            </dd>
            <dt>@Html.DisplayNameFor(r => r.ResourceInternetAddresses[i].DomainIpAddress)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.ResourceInternetAddresses[i].DomainIpAddress))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.ResourceInternetAddresses[i].DomainIpAddress
                }
            </dd>
            <dt>@Html.DisplayNameFor(r => r.ResourceInternetAddresses[i].IsDynamicIpAddress)</dt>
            <dd>
                @(Model.ResourceInternetAddresses[i].IsDynamicIpAddress ? "Да" : "Нет")
            </dd>
        </dl>
        <div class="clearfix"></div>
    </li>
}
            </ul>
        }
        else
        {
            <div class="panel-body">
                <div class="text-center">
                    <i>Отсутствуют</i>
                </div>
            </div>
        }
    </div>
