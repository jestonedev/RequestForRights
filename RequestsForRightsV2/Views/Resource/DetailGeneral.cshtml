            <dd>
                @if (string.IsNullOrEmpty(Model.ResourceInternetAddresses[i].NetName))
                {
                    <i>Отсутствует</i>
                }
                else
                {
                    @Model.ResourceInternetAddresses[i].NetName
                }
            </dd>
            <dt>@Html.DisplayNameFor(r => r.ResourceInternetAddresses[i].DeviceIpAddress)</dt>
            <dd>
                @if (string.IsNullOrEmpty(Model.ResourceInternetAddresses[i].DeviceIpAddress))
