                    <div>
                        @Html.TextBoxFor(r => Model.Resource.Department.SelfAddressHouse,
                            new { @class = "form-control", placeholder = "Введите дом" })
                        @Html.ValidationMessageFor(r => r.Resource.Department.SelfAddressHouse)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

