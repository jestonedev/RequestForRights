@using RequestsForRights.Infrastructure.Extensions
@model RequestsForRights.Models.ViewModels.ResourceViewModel
@{
    Layout = null;
}

<div class="panel panel-primary rr-resource-owner">
<div class="panel-heading">Общие сведения</div>
<div class="panel-body rr-col-sm-no-side-padding-always">
    <div class="col-xs-12 rr-resource-department-id">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.IdDepartment, new { @class = "control-label" })
            @Html.DropDownListFor(r => r.Resource.IdDepartment,
            new SelectList(Model.Departments, "IdDepartment", "Name", Model.Resource.IdDepartment),
            "Выберите департамент-владелец",
            new { @class = "form-control" })
            @Html.ValidationMessageFor(r => r.Resource.IdDepartment)
        </div>
    </div>
    <div class="rr-resource-department-name">
        @Html.HiddenFor(r => r.Resource.Department.Name)
    </div>
    <div class="col-xs-12 rr-resource-department-tax-payer-number">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.Department.TaxPayerNumber,
            new { @class = "control-label" })
            @Html.TextBoxFor(r => r.Resource.Department.TaxPayerNumber,
            new { @class = "form-control", placeholder = "Введите идентификационный номер налогоплательщика" })
            @Html.ValidationMessageFor(r => r.Resource.Department.TaxPayerNumber)
        </div>
    </div>
    <div class="col-xs-12 rr-resource-department-official-name-long-ru">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.Department.OfficialNameLongRu,
            new { @class = "control-label" })
            @Html.TextBoxFor(r => r.Resource.Department.OfficialNameLongRu,
                new { @class = "form-control", placeholder = "Введите полное наименование владельца на русском языке" })
            @Html.ValidationMessageFor(r => r.Resource.Department.OfficialNameLongRu)
        </div>
    </div>
    <div class="col-xs-12 rr-resource-department-official-name-long-en">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.Department.OfficialNameLongEn,
            new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default rr-transliterate-button"
                            data-from-id="Resource_Department_OfficialNameLongRu"
                            data-to-id="Resource_Department_OfficialNameLongEn"
                            type="button"
                            aria-label="Перевести русское именование на транслитерацию"
                            title="Перевести русское именование на транслитерацию">
                        <span class="glyphicon glyphicon-retweet" aria-hidden="true"></span>
                    </button>
                </span>
                @Html.TextBoxFor(r => r.Resource.Department.OfficialNameLongEn,
                new { @class = "form-control", placeholder = "Введите полное наименование владельца на английском языке" })
            </div>
            @Html.ValidationMessageFor(r => r.Resource.Department.OfficialNameLongEn)
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 rr-resource-department-official-name-short-ru">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.Department.OfficialNameShortRu,
            new { @class = "control-label" })
            @Html.TextBoxFor(r => r.Resource.Department.OfficialNameShortRu,
            new { @class = "form-control", placeholder = "Введите сокращенное наименование владельца на русском языке" })
            @Html.ValidationMessageFor(r => r.Resource.Department.OfficialNameShortRu)
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 rr-resource-department-official-name-short-en">
        <div class="form-group">
            @Html.RequiredLabelFor(r => r.Resource.Department.OfficialNameShortEn,
            new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default rr-transliterate-button"
                            data-from-id="Resource_Department_OfficialNameShortRu"
                            data-to-id="Resource_Department_OfficialNameShortEn"
                            type="button"
                            aria-label="Перевести русское именование на транслитерацию"
                            title="Перевести русское именование на транслитерацию">
                        <span class="glyphicon glyphicon-retweet" aria-hidden="true"></span>
                    </button>
                </span>
                @Html.TextBoxFor(r => r.Resource.Department.OfficialNameShortEn,
            new { @class = "form-control", placeholder = "Введите сокращенное наименование владельца на английском языке" })
            </div>
            @Html.ValidationMessageFor(r => r.Resource.Department.OfficialNameShortEn)
        </div>
    </div>
<div class="clearfix"></div>
