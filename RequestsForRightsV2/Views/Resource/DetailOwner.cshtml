<div class="panel panel-primary">
    <div class="panel-heading">Должностные лица</div>
    @if (Model.ResourceOwnerPersons != null && Model.ResourceOwnerPersons.Any(r => !r.Deleted))
    {
        <ul class="list-group rr-owner-persons">
            @for (var j = 0; j < Model.ResourceOwnerPersons.Count; j++)
            {
                if (Model.ResourceOwnerPersons[j].Deleted)
                {
                    continue;
                }

                <li class="list-group-item clearfix rr-col-sm-no-side-padding-always">
                    <dl class="col-sm-6">
                        <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Post)</dt>
                        <dd>
                            @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Post))
                            {
                                <i>Отсутствует</i>
                            }
                            else
                            {
                                @Model.ResourceOwnerPersons[j].Post
                            }
                        </dd>
                        <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Name)</dt>
                        <dd>
                            @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Name))
                            {
                                <i>Отсутствует</i>
                            }
                            else
                            {
                                @Model.ResourceOwnerPersons[j].Name
                            }
                        </dd>
                    </dl>
                    <dl class="col-sm-6">
                        <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Surname)</dt>
                        <dd>
                            @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Surname))
                            {
                                <i>Отсутствует</i>
                            }
                            else
                            {
                                @Model.ResourceOwnerPersons[j].Surname
                            }
                        </dd>
                        <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Patronimic)</dt>
                        <dd>
                            @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Patronimic))
                            {
                                <i>Отсутствует</i>
                            }
                            else
                            {
                                @Model.ResourceOwnerPersons[j].Patronimic
                            }
                        </dd>
                    </dl>
                    <div class="clearfix"></div>
                    <div class="panel panel-primary rr-resource-person-panel">
                        <div class="panel-heading">Реквизиты актов о возложении соответствующих полномочий</div>
                        @if (Model.ResourceOwnerPersons[j].Acts != null && Model.ResourceOwnerPersons[j].Acts.Any(r => !r.Deleted))
                        {
                            <ul class="list-group rr-owner-person-acts">
                                @for (var i = 0; i < Model.ResourceOwnerPersons[j].Acts.Count; i++)
                                {
                                    if (Model.ResourceOwnerPersons[j].Acts[i].Deleted)
                                    {
                                        continue;
                                    }
                                    <li class="list-group-item clearfix rr-col-sm-no-side-padding-always">
                                        <div>
                                            <dl class="col-sm-6">
                                                <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Acts[i].ActType)</dt>
                                                <dd>
                                                    @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Acts[i].ActType))
                                                    {
                                                        <i>Отсутствует</i>
                                                    }
                                                    else
                                                    {
                                                        @Model.ResourceOwnerPersons[j].Acts[i].ActType
                                                    }
                                                </dd>
                                                <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Acts[i].ActDate)</dt>
                                                <dd>
                                                    @if (Model.ResourceOwnerPersons[j].Acts[i].ActDate == null)
                                                    {
                                                        <i>Отсутствует</i>
                                                    }
                                                    else
                                                    {
                                                        @Model.ResourceOwnerPersons[j].Acts[i].ActDate.Value.ToString("dd.MM.yyyy", CultureInfo.CurrentCulture)
                                                    }
                                                </dd>
                                            </dl>

                                            <dl class="col-xs-12 col-sm-6">
                                                <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Acts[i].ActName)</dt>
                                                <dd>
                                                    @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Acts[i].ActName))
                                                    {
                                                        <i>Отсутствует</i>
                                                    }
                                                    else
                                                    {
                                                        @Model.ResourceOwnerPersons[j].Acts[i].ActName
                                                    }
                                                </dd>
                                            </dl>
                                            <dl class="col-xs-12 col-sm-6">
                                                <dt>@Html.DisplayNameFor(r => r.ResourceOwnerPersons[j].Acts[i].ActNumber)</dt>
                                                <dd>
                                                    @if (string.IsNullOrEmpty(Model.ResourceOwnerPersons[j].Acts[i].ActNumber))
                                                    {
                                                        <i>Отсутствует</i>
                                                    }
                                                    else
                                                    {
                                                        @Model.ResourceOwnerPersons[j].Acts[i].ActNumber
                                                    }
                                                </dd>
                                            </dl>
                                        </div>
                                        @if (Model.ResourceOwnerPersons[j].Acts[i].IdFile != null)
                                        {
                                            <div class="clearfix"></div>
                                            <div class="col-xs-12 pull-left text-info rr-act-file-link">
                                                <a href="@Url.Action("LoadFile", "Resource", new
                                                         {
                                                             Model.ResourceOwnerPersons[j].Acts[i].IdFile
                                                         })">Скачать</a>
                                            </div>
                                        }
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="panel-body">
                                <div class="text-center">
                                    <i>Отсутствуют</i>
                                </div>
                            </div>
                        }
                    </div>
                </li>

            }
        </ul>
    }
    else
    {
        <div class="panel-body">
            <div class="text-center">
                <i>Отсутствуют</i>
            </div>
        </div>
    }
</div>